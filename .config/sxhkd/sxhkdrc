#
# wm independent hotkeys
#

# terminal emulator
ctrl + alt + @i
    termite

# program launcher
super + @space
	rofi -modi drun -matching fuzzy -show drun -display-drun ""

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# toggle polybar
super + b
    toggleBar.sh toggle

# brightness
XF86MonBrightnessUp
    light -A 1

XF86MonBrightnessDown
    light -U 1

# audio 
XF86AudioLowerVolume
    "$HOME"/bin/volume.sh down

XF86AudioRaiseVolume
    "$HOME"/bin/volume.sh up

XF86AudioMute
    "$HOME"/bin/volume.sh mute

XF86AudioMicMute
    pactl set-source-mute 1 toggle 

super + p ; {Left,Up,Right}
    playerctl --player=%any,chromium {previous,play-pause,next}

# screenshot
Print
    "$HOME"/bin/rofi-menus/scrot/scrot-menu.sh

# power
ctrl + alt + Delete
    "$HOME"/bin/rofi-menus/power/power-menu.sh

#password manager
XF86Favorites
    rofi-pass

#XF86Bluetooth


# bspwm hotkeys
#

# quit bspwm
ctrl + alt + q
	bspc quit

# restart sxhkd
ctrl + alt + r
	pkill sxhkd; DISPLAY=:0 sxhkd

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# changin windows in monocle mode
super + bracket{left,right}
    bspc node -f {prev, next}.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,z}
	bspc node -g {marked,locked,private}

# toggle sticky private node
super + o
    bspc node -g sticky private
#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the next occupied desktop
super + Tab
	bspc desktop -f next.occupied.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# move selected window into preselected area
super + Return
	bspc node -n 'last.!automatic.local'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move floating windows and resizing windows
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + ctrl + {Left,Down,Up, Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20, left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
